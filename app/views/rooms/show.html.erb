<div class="container">
  <div class="top row mb-4">
    <div class="room-image col-md-7">
      <%= image_tag @room.room_image.url %>
    </div>
    <div class="reserve-box col-md-5 p-3 d-none d-md-block">
      <h4 class="mb-4">￥<%= @room.price %>／日</h4>
      <%= form_with url: new_room_reserf_path(@room.id), method: :get, local: true do |f| %>
        <%= f.label :start_date, "開始日", class: "mb-2" %>
        <%= f.date_field :start_date, class: "form-control mb-4" %>

        <%= f.label :end_date, "終了日", class: "mb-2" %>
        <%= f.date_field :end_date, class: "form-control mb-4" %>

        <%= f.label :number_people, "人数", class: "mb-2" %>
        <%= f.number_field :number_people, class: "form-control mb-4" %>

        <% if user_signed_in? %>
          <%= f.submit "予約する", class: "btn btn-primary form-control" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary d-block me-3", role: "button" %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="room-profile">
    <div class="row room-name-address py-4">
      <div class="col-md-1 col-2 icon">
        <% if @room.user.icon_image.url == nil %>
          <%= image_tag "default_icon.jpeg", class: "rounded-circle", size: "60x60" %>
        <% else %>
          <%= image_tag @room.user.icon_image.url, class: "rounded-circle", size: "60x60" %>
        <% end %>
      </div>
      <div class="col-md-11 col-10 room-show">
        <div class="fw-bold"><%= @room.name %></div>
        <div><%= @room.address %></div>
      </div>
    </div>
    <div class="row room-introduction py-4 mb-5">
     <%= @room.introduction %>
    </div>
  </div>

  <div class="reserve-box col-md-5 p-3 d-md-none mb-5">
      <h4 class="mb-4">￥<%= @room.price %>／日</h4>
      <%= form_with url: new_room_reserf_path(@room.id), method: :get, local: true do |f| %>
        <%= f.label :start_date, "開始日", class: "mb-2" %>
        <%= f.date_field :start_date, class: "form-control mb-4" %>

        <%= f.label :end_date, "終了日", class: "mb-2" %>
        <%= f.date_field :end_date, class: "form-control mb-4" %>

        <%= f.label :number_people, "人数", class: "mb-2" %>
        <%= f.number_field :number_people, class: "form-control mb-4" %>

        <% if user_signed_in? %>
          <%= f.submit "予約する", class: "btn btn-primary form-control" %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, class: "btn btn-primary d-block me-3", role: "button" %>
        <% end %>
      <% end %>
    </div>

</div>