<div class="container">
  <div class="form">
    <h2 class="title-login-registration">新しいアカウントを作成</h2>

    <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <div class="must-icon"></div>
        <%= f.text_field :user_name, autofocus: true, placeholder: "ユーザー名", class: "form-control" %>
      </div>

      <div class="field">
        <div class="must-icon"></div>
        <%= f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
      </div>

      <div class="field">
        <div class="must-icon"></div>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
      </div>

      <div class="field">
        <div class="must-icon"></div>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "新しいアカウントを作成", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>